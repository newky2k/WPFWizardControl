<Project Sdk="MSBuild.Sdk.Extras/3.0.38">

  <PropertyGroup>
    <TargetFrameworks>uap10.0.18362;net5.0-windows10.0.18362; netcoreapp3.1;net5.0-windows7.0;</TargetFrameworks>
    <RootNamespace>DSoft.WizardControl</RootNamespace>
    <AssemblyName>DSoft.WizardControl</AssemblyName>
    <Product>$(AssemblyName) ($(TargetFramework))</Product>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <Configurations>Debug;Release</Configurations>
    <EnableDefaultPageItems>false</EnableDefaultPageItems>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition=" $(TargetFramework.StartsWith('net5.0-windows10')) ">
    <UseWinUI>true</UseWinUI>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64;win10-arm</RuntimeIdentifiers>
    <DefineConstants>$(DefineConstants);WINUI</DefineConstants>
  </PropertyGroup>

	<PropertyGroup Condition=" $(TargetFramework.StartsWith('uap10.0')) ">
		<DefineConstants>$(DefineConstants);UAP</DefineConstants>
	</PropertyGroup>
	
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('netcoreapp3.1')) ">
	  <UseWPF>true</UseWPF>
    <DefineConstants>$(DefineConstants);WPF</DefineConstants>
  </PropertyGroup>

	<PropertyGroup Condition=" $(TargetFramework.StartsWith('net5.0-windows7.0')) ">
		<UseWPF>true</UseWPF>
		<DefineConstants>$(DefineConstants);WPF</DefineConstants>
	</PropertyGroup>
	
  <ItemGroup>
    <Compile Include="**\*.shared.cs" />
    <Compile Include="**\*.shared.*.cs" />
  </ItemGroup>
  
  <ItemGroup Condition=" $(TargetFramework.StartsWith('net5.0-windows10')) ">
	 <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.0.0" />
	 <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.22000.194" />

    <Compile Include="**\*.winui.cs" />
    <Compile Include="**\*.winui.*.cs" />

    <Page Include="Themes\UWP\Generic.xaml">
      <SubType>Designer</SubType>
      <Generator>MSBuild:Compile</Generator>
		<Link>Themes\Generic.xaml</Link>
    </Page>
    
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap10.0')) ">

    <Compile Include="**\*.uwp.cs" />
    <Compile Include="**\*.uwp.*.cs" />

    <Page Include="Themes\UWP\Generic.xaml">
      <SubType>Designer</SubType>
      <Generator>MSBuild:Compile</Generator>
		<Link>Themes\Generic.xaml</Link>
    </Page>
    
  </ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('netcoreapp3.1')) ">

		<Compile Include="**\*.wpf.cs" />
		<Compile Include="**\*.wpf.*.cs" />

		<Page Include="Themes\WPF\Generic.xaml">
			<SubType>Designer</SubType>
			<Generator>MSBuild:Compile</Generator>
			<Link>Themes\Generic.xaml</Link>
		</Page>

	</ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('net5.0-windows7.0')) ">

		<Compile Include="**\*.wpf.cs" />
		<Compile Include="**\*.wpf.*.cs" />

		<Page Include="Themes\WPF\Generic.xaml">
			<SubType>Designer</SubType>
			<Generator>MSBuild:Compile</Generator>
			<Link>Themes\Generic.xaml</Link>
		</Page>

	</ItemGroup>

  <ItemGroup>
    <None Remove="Themes\Generic.xaml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DSoft.WizardControl.Core\DSoft.WizardControl.Core.csproj" />
  </ItemGroup>

</Project>
