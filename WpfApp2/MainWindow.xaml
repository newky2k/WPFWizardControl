<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        xmlns:wizard="clr-namespace:Dsoft.WizardControl.WPF;assembly=Dsoft.WizardControl.WPF"
        xmlns:textdata="clr-namespace:WpfApp2.TestData.Pages"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <wizard:WizardControl Title="{Binding Title}"  Pages="{Binding Pages}"  
                              ProcessingPage="{Binding ProcessPage}" 
                              ErrorPage="{Binding ErrorPage}" 
                              CompletePage="{Binding CompletePage}"
                              ProcessFunction="{Binding ProcessFunction}" 
                              CloseFunction="{Binding CloseFunction}" 
                              CancelFunction="{Binding CancelFunction}"/>
    </Grid>
</Window>
